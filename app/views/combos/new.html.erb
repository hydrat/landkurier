<% title t('.title') %>

<%= simple_form_for @combo do |f| %>
  <%= f.error_messages %>
  <%= f.input :type, :collection => ['FixCombo', 'FlexCombo'] %>
  <%#= f.input :type_helper, :collection => ['FixCombo', 'FlexCombo'] %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :size %>
  <%= f.input :periodicity, :collection => Combo::PERIODICITIES.sort.map {|k,v| [t("activerecord.attributes.combo.periodicities.#{v}") ,k]} %>
  <%#= f.input :periodicity, :collection => Combo::PERIODICITIES.sort.map {|k,v| [v,k]} %>
  
  
  <%= f.submit %> <%= t('or')%> <%= link_to t('cancel'), combos_path %> 

<% end %>